<?xml version="1.0"?>
<grammar type="ledge" version="1.0" author="Gen Nishida">
	<attr name="ledge_extrude_height1_ratio" value="0.2" range="0.1,0.7"/>
	<attr name="ledge_extrude_height2_ratio" value="0.3" range="0.1,0.7"/>
	
	<rule name="Start">
		<split splitAxis="y">
			<param type="relative" value="0.5" name="LedgeLayer1"/>
			<param type="relative" value="0.5" name="LedgeLayer2"/>
		</split>
	</rule>
	<rule name="LedgeLayer1">
		<size centered="true">
			<param name="xSize" type="absolute" value="scope.sx+ledge_extrude_height1_ratio*scope.sy*2"/>
			<param name="ySize" type="relative" value="1"/>
			<param name="zSize" type="relative" value="1"/>
		</size>
		<extrude height="scope.sy*ledge_extrude_height1_ratio"/>
		<comp>
			<param name="side" value="LedgeFace"/>
			<param name="top" value="LedgeFace"/>
		</comp>
	</rule>
	<rule name="LedgeLayer2">
		<size centered="true">
			<param name="xSize" type="absolute" value="scope.sx+ledge_extrude_height2_ratio*scope.sy*2"/>
			<param name="ySize" type="relative" value="1"/>
			<param name="zSize" type="relative" value="1"/>
		</size>
		<extrude height="scope.sy*ledge_extrude_height2_ratio"/>
		<comp>
			<param name="side" value="LedgeFace"/>
			<param name="top" value="LedgeFace"/>
		</comp>
	</rule>
</grammar>
